<body class="pricing-page">

   

    <main class="main">

       

        <!-- Page Title -->
        <div class="page-title light-background">
            <div class="container">
                <nav class="breadcrumbs">
                    <ol>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="current">Pricing Calculator</li>
                    </ol>
                </nav>
                <h1>Pricing</h1>
            </div>
        </div><!-- End Page Title -->
        <section id="pricing" class="pricing section">
            <div class="container">
                <div class="row g-4 g-lg-0">
                    <div class="col-lg-4 offset-lg-4" data-aos="zoom-in" data-aos-delay="100">
                        <div class="pricing-item">
                            <h3>Calculate Your Tutoring Cost</h3>
                            <h4>Hourly Rate: <sup>$</sup><span id="rate">10</span></h4>
                            <ul>
                                <li><i class="bi bi-check"></i> <span>Enter the hours you need</span></li>
                                <li><i class="bi bi-check"></i> <span>Instant calculation</span></li>
                            </ul>
                            <div>
                                <label for="hours">Hours Needed:</label>
                                <input type="number" id="hours" min="1">
                                <br />
                                <span id="error-message" style="color: red; display: none;">Please enter a valid number.</span>
                            </div>
                            <br />
                            <div>
                                <label for="rate">Hourly Rate:</label>
                                <input type="text" id="rate" value="10" readonly> <!-- Change 20 to your actual rate -->
                            </div>
                            <br />
                            <div class="text-center">
                                <button id="calculate" class="buy-btn">Calculate</button>
                            </div>
                            <br />
                            <div>
                                <label for="total">Total Cost:</label>
                                <input type="text" id="total" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>

    <footer id="footer" class="footer dark-background">

        <div class="container">
            <div class="row gy-3">
                <div class="col-lg-3 col-md-6 d-flex">
                    <i class="bi bi-geo-alt icon"></i>
                    <div class="address">
                        <h4>Address</h4>
                        <p>TNRB, Brigham Young University</p>
                        <p>Provo, UT 84602</p>
                        <p></p>
                    </div>

                </div>

                <div class="col-lg-3 col-md-6 d-flex">
                    <i class="bi bi-telephone icon"></i>
                    <div>
                        <h4>Contact</h4>
                        <p>
                            <strong>Email:</strong> <span>cts59@byu.edu</span><br>
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 d-flex">
                    <i class="bi bi-clock icon"></i>
                    <div>
                        <h4>Opening Hours</h4>
                        <p>
                            <strong>Mon-Fri:</strong> <span>4AM - 12PM</span><br>
                            <strong>Sat&Sun</strong>: <span>Closed</span>
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h4>Follow Us</h4>
                    <div class="social-links d-flex">
                        <a href="https://www.linkedin.com/in/christian-t-sorensen/" class="linkedin"><i class="bi bi-linkedin"><img src="~/img/linkedin-logo-linkedin-icon-transparent-free-png.png" width="75" height="75" /></i></a>
                    </div>
                </div>

            </div>
        </div>

        <div class="container copyright text-center mt-4">
            <strong class="px-1 sitename">Site Made By Christian Sorensen</strong><p>© <span>2025 Sorensen, Inc.</span>  <span>All Rights Reserved</span></p>
        </div>

    </footer>

